<% if user_signed_in? %>

<div class="table-responsive mb-3">
  <table
    class="table
    table-striped
    table-bordered
    table-hover
    align-middle
    text-center
    mb-0"
  >
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>
  
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to "#{friend.first_name} #{friend.last_name}", friend, class:"text-decoration-none" %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>

<h1>Hello World!</h1>
This is my first Rails Webpage :)

<% end %>